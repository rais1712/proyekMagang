modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["android-tools", "wget", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build APK"

[[workflows.workflow]]
name = "Build APK"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew assembleDebug --console=plain --no-daemon"

[workflows.workflow.metadata]
outputType = "console"
